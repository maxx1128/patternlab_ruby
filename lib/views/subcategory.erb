
<% if File.exist?("../patternlab/lib/views/source/#{@lvl1}/#{@lvl2}.md") %>


  <%= markdown :"source/#{@lvl1}/#{@lvl2}" %>

<% end %>


<% @subcategory_data.each do |item| %>

  <% if @lvl1 == 'templates' || @lvl1 == 'pages' %>

    <%= erb :'includes/template_link', :locals => {
      :header => "h3",
      :label => item["label"],
      :file_href => "#{@lvl1}/#{@title.downcase}/#{item["label"]}",
      :partial_href => "#{@title.downcase}"
    } %>

  <% else %>

    <%= erb :'includes/pattern_embed', :locals => {
      :header => "h3",
      :label => item["label"],
      :file_href => "#{@lvl1}/#{@title.downcase}/#{item["label"]}",
      :sass_href => "_#{@lvl1}/_#{@title.downcase}/_#{item["label"]}",
      :pattern_href => true
    } %>

  <% end %>

<% end %>

