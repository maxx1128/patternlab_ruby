
<% if File.exist?("../patternlab/lib/views/source/#{@lvl1}/#{@lvl2}.md") %>


  <%= markdown :"source/#{@lvl1}/#{@lvl2}" %>

<% end %>


<% @subcategory_data.each do |item| %>

  <% if @lvl1[3..-1] == 'templates' || @lvl1[3..-1] == 'pages' %>

    <%= erb :'includes/template_link', :locals => {
      :header => "h3",
      :label => item["label"],
      :lvl1 => @lvl1,
      :file_href => "#{@lvl1}/#{@title_raw.downcase}/#{item["label"]}",
      :partial_href => "#{@title.downcase}"
    } %>

  <% else %>

    <%= erb :'includes/pattern_embed', :locals => {
      :header => "h3",
      :label => item["label"],
      :file_href => "#{@lvl1}/#{@title_raw.downcase}/#{item["label"]}",
      :asset_href => "#{@lvl1[3..-1]}/#{@title_raw[3..-1].downcase}/#{item["label"][3..-1]}",
      :pattern_href => true
    } %>

  <% end %>

<% end %>

