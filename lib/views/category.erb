
<% if @descr_exists %>
  <%= markdown :"source/#{@title}" %>
<% end %>

<% @category_data.each do |item| %>

    <%= erb :'includes/pattern_embed', :locals => {
      :header => "h3",
      :label => item["label"],
      :file_href => "#{@title.downcase}/#{item["label"]}",
      :pattern_href => false
    } %>


      <% item["submenu"].each do |item2| %>

        <%= erb :'includes/pattern_embed', :locals => {
          :header => "h4",
          :label => item2["label"],
          :file_href => "#{@title.downcase}/#{item["label"]}/#{item2["label"]}",
          :pattern_href => true
        } %>

      <% end %>

  <br>
  <br>
  <br>
<% end %>

