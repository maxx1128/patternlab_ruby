
<% if @descr_exists %>
  <%= markdown :"source/#{@title}" %>
<% end %>

<% @category_data.each do |item| %>

  <%= erb :'includes/pattern_embed', :locals => {
    :header => "h3",
    :label => item["label"],
    :file_href => "#{@lvl1}/#{item["label"]}",
    :asset_href => "#{@lvl1[3..-1]}/#{item["label"][3..-1]}",
    :pattern_href => false
  } %>


    <% item["submenu"].each do |item2| %>

      <% if @lvl1[3..-1] == 'templates' || @lvl1[3..-1] == 'pages' %>

        <%= erb :'includes/template_link', :locals => {
          :header => "h4",
          :label => item2["label"],
          :lvl1 => "#{@lvl1}",
          :file_href => "#{@lvl1}/#{item["label"]}/#{item2["label"]}",
          :partial_href => "#{item["label"]}"
        } %>

      <% else %>

        <%= erb :'includes/pattern_embed', :locals => {
          :header => "h4",
          :label => item2["label"],
          :file_href => "#{@lvl1}/#{item["label"]}/#{item2["label"]}",
          :asset_href => "#{@lvl1[3..-1]}/#{item["label"][3..-1]}/#{item2["label"][3..-1]}",
          :pattern_href => true
        } %>

      <% end %>

    <% end %>
<% end %>

