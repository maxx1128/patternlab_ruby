      <% end %>
  <% end %>
<% end %>

<p>
  Types:
</p>
<ul>
  <% @full_data["types"].each do |type| %>
    <li>
      <a href="/type/<%= type.downcase %>">
        <%= type %>
      </a>
    </li>
  <% end %>
</ul>

<p>
  Stats:
</p>
<ul>
  <% @full_data["full_stats"].each do |name, value| %>
    <li>
      <%= name %>: <%= value %>
    </li>
  <% end %>
</ul>

<p>
  Descriptions:
</p>
<ul>
  <% @full_data["descriptions_full"].reverse.each do |descr| %>
    <% if descr["language"]["name"] == "en" %>
      
      <li>
        <strong><%= descr["version"]["name"].capitalize.sub('-', ' ') %>:</strong> <%= descr["flavor_text"] %>
      </li>
    <% end %>
  <% end %>
</ul>


