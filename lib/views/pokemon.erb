<html>
  <head>
    <title>Pokemon #<%= @id %>: <%= @name %></title>
    <link rel="stylesheet" href="css/main.css">
  </head>

  <body>
    <h1>#<%= @id %>: <%= @name %></h1>

    <img src="<%= @sprite_url_regular %>">
    <img src="<%= @sprite_url_shiny %>">
    
    <p>Types:</p>
    <ul>
      <% @types.each do |type| %>
        <li><%= type %></li>
      <% end %>
    </ul>

    <p>
      <a href="/<%= @prev_id %>">Previous Pokemon</a>
    </p>

    <p>
      <a href="/<%= @next_id %>">Next Pokemon</a>
    </p>

    <p>
      <a href="/">Home</a>
    </p>
</body>
</html>