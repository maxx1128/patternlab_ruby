
  <h1>
    Color Listing: <%= @color.capitalize %>
  </h1>

  <div class="pd-archiveItem__group">

    <% @pokemon.each do |entry| %>
      <% if entry['url'].split("/")[6].to_i < 722 %>

        <%= erb :'includes/archive_item', :locals => {
          :link => "/pokemon/#{entry['url'].split('/')[6].to_i}",
          :img_url => "https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/#{entry['url'].split('/')[6].to_i}.png" ,
          :title => entry['name'].capitalize.sub('-', ' '),
          :subheading => "null"
        } %>

      <% end %>
    <% end %>

  </div>