<html>
  <head>
    <title>Type: <%= @type.capitalize %></title>
    <link rel="stylesheet" type="text/css" href="/css/main.css">
  </head>

  <body>
    <h1>
      Type Listing: <%= @type.capitalize %>
    </h1>

    <ul>
      <% @pokemon.each do |entry| %>

        <% if entry['pokemon']['url'].split("/")[6].to_i < 722 %>
          <li>
            <a href="/pokemon/<%= entry['pokemon']['url'].split("/")[6].to_i %>">
              <%= entry['pokemon']['name'].capitalize.sub('-', ' ') %> - <img src="https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/<%= entry['pokemon']['url'].split("/")[6].to_i %>.png" alt="">
            </a>
          </li>
        <% end %>
      <% end %>
    </ul>

  </body>
</html>