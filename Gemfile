source 'https://rubygems.org'
ruby '2.3.3'

# Specify your gem's dependencies in gothonweb.gemspec
gem 'sinatra'

# We're using this for sinatra auto-reloading
gem 'sinatra-contrib'

# We're using this for API calls
gem 'httparty'

# Asset management
gem 'sprockets'

# Basic sass styles
gem 'sass'
gem 'autoprefixer-rails'

# Basic javascript
gem 'coffee-script'
gem 'uglifier'

# Liquid templating
gem 'liquid'

# Markdown templating
gem 'rdiscount'

group :development do
  gem 'byebug'
end


